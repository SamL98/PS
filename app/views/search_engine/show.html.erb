<body class="showType">
<h1><%= @article.title %></h1>
<p><%= @article.text %></p>
</body>
<style>
	h1 {
		text-align: center;
		font-size: 35px;
		margin-bottom: 50px;
		margin-left: 20px;
		margin-right: 20px;
	}
	p {
		font-size: 20px;
		margin-left: 25px;
		margin-right: 25px;
	}
</style>
<script type="text/javascript">
	console.log(window.location);
	var start;
	$(function() {
		start = Date.now();
		$(window).on('popstate', function() {
			if($('body').is('.showType')) {
				index = <%= @article.index %>
				rand_index = <%= @article.rand_index %>
				$.post('/log', {article: {index: index, rand_index: rand_index, time_spent: Date.now()-start}},
					function(response) {
						console.log(response);
					});
			}
		});
	});
</script>