<div class="center jumbotron" id="center">
<h1>BallotBot</h1>
</div>
<div id="form">
<%= form_tag("/home", method: "get", validates: true, target: "_blank") do %>
	<%= label_tag(:subj, "Enter subject identifier: ") %>
	<%= text_field_tag(:subj) %>
	<p></p>
	<%= label_tag(:cond, "Enter testing condition: ") %>
	<%= label_tag(:cond_1, "1") %>
	<%= radio_button_tag(:cond, "1") %>
	<%= label_tag(:cond_2, "2") %>
	<%= radio_button_tag(:cond, "2") %>
	<p></p>
	<div id="submit">
	<%= submit_tag("Login") %>
	</div>
<% end %>
</div>
<script type="text/javascript">
	$(window).on('beforeunload', function() {
		window.close('/');
	});
</script>
<style>
	#center {
		background: rgb(255, 153, 0);
		color: #FFFFFF;
		font-size: 50px;
	}
	#form {
		margin-left: 75px;
		font-size: 25px;
		color: gray;
		float: left;
	}
	#submit {
		margin-top: 25px;
	}
</style>