<head>
	<!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>
<body>
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="page-header">
				<h1>Search Engine</h1>
			</div>

			<div id="form">
				<%= form_tag("/home", method: "get", validates: true, target: "_blank", style: "margin-top: 30px;") do %>

					<div class="form-group">
						<%= text_field_tag(:subj, "", placeholder: "Enter subject identifier", id: "subjInput", class: "form-control") %>
					</div>

					<div class="form-group">
						<%= text_field_tag(:cond, "", placeholder: "Enter testing condition", id: "condInput", class: "form-control") %>
					</div>

					<div class="form-group" id="submit">
						<%= submit_tag("Login", class: "btn btn-primary") %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</body>

<style>
#submit {
	float: right;
	margin-right: 25px;
}
#subjInput, #condInput {
	margin-top: 10px;
	margin-bottom: 10px;
	margin-left: 15px;
	margin-right: 15px;
	height: 20px;
	width: 90%;
}
</style>