<head>
	<!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>
<body>
	<div class="page-header">
		<h1>Search Engine</h1>
	</div>
	<% @articles.each do |article| %>
		<h2><%= link_to "#{article.title}", title_path(article.index, rand_index: article.rand_index, subj_id: @subj_id, cond: @cond) %></h2>
		<p><%= article.text[0..article.text.index('.')] + "..." %></p>
	<% end %>
</body>

<script type="text/javascript">
	var start = Date.now();
	$('a').click(function(event){
		var id = gon.subjId;
		var condition = gon.cond;

		$.post('/log', {subj_id: id, cond: condition, article: {index: 0, rand_index: 0, time_spent: Date.now()-start}},
			function(response) {
		});
	});
</script>

